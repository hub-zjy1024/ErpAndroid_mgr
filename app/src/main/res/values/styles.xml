<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myButton">
        <item name="android:background">@drawable/btn_click</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="zjy_theme_stautebar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:buttonStyle">@style/zjy_button_light</item>

    </style>
    <style name="zjy_button_light" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_light_button</item>
        <item name="android:textColor">@color/button_light_content</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">60dp</item>
    </style>
    <!--<style name="zjy_theme_stautebar" parent="Theme.">-->
    <!--<item name="android:windowActionModeOverlay">true</item>-->

    <!--</style>-->


    <style name="caigouedit_items">
        <item name="android:textColor">#a85cff</item>
    </style>

    <style name="Popwindow_animation">
        <item name="android:windowEnterAnimation">@anim/pop_show_translate</item>
        <item name="android:windowExitAnimation">@anim/pop_dismiss_translate</item>
    </style>

    <declare-styleable name="WarpLinearLayout">
        <attr name="grivate" format="enum"><!--对齐方式 !-->
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="horizontal_Space" format="dimension"/>
        <attr name="vertical_Space" format="dimension"/>
        <attr name="isFull" format="boolean"/>
    </declare-styleable>

    <style name="WarpLinearLayoutDefault">
        <item name="grivate">left</item>
        <item name="horizontal_Space">0dp</item>
        <item name="vertical_Space">5dp</item>
        <item name="isFull">true</item>
    </style>

    <style name="zjy_title">
        <item name="android:background">@color/title_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

</resources>
