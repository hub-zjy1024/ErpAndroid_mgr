<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_provider_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.b1b.js.erpandroid_mgr.ProviderManagerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/zjy_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="供应商管理"
            />

        <Button
            android:id="@+id/activity_provider_manager_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@color/title_background"
            android:text="新增"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/activity_provider_manager_ed_name"
            android:layout_width="200dp"
            app:met_clearButton="true"
            app:met_primaryColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="供应商名称"/>

        <Button
            android:id="@+id/activity_provider_manager_btn_search"
            android:layout_width="60dp"
            android:layout_marginLeft="50dp"
            style="@style/zjy_button_light"
            android:text="查询"
            android:layout_height="35dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/activity_provider_manager_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
